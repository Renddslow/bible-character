{
	"name": "bible-character",
	"version": "0.0.0",
	"private": false,
	"description": "A Bible character GraphQL API.",
	"repository": "https://github.com/Renddslow/bible-character",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^15.6.0",
		"ava": "^3.15.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	}
}
