{
	"name": "bible-character",
	"version": "0.0.0",
	"private": false,
	"description": "A Bible character GraphQL API.",
	"repository": "https://github.com/Renddslow/bible-character",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {
		"build": "node build.js",
		"watch:build": "yarn build --watch",
		"watch:dist": "nodemon dist/index.js",
		"start": "run-p watch:*",
		"new": "node tools/new.js",
		"id": "node tools/id.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^15.6.0",
		"ava": "^3.15.0",
		"esbuild": "^0.12.1",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"@arr/unique": "^1.0.1",
		"apollo-server": "^2.24.1",
		"array-union": "^2.0.0",
		"catchify": "^2.6.1",
		"cuid": "^2.1.8",
		"graphql": "^15.5.0",
		"mri": "^1.1.6",
		"pkg-up": "^3.1.0",
		"qs": "^6.10.1",
		"yaml": "^1.10.2"
	}
}
